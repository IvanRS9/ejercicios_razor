@page
@model ejercicios_razor.Pages.AleatoriosModel
@{
    ViewData["Title"] = "Estadísticas de Números Aleatorios";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f7f7f7;
            margin: 0;
            padding: 0;
            text-align: center;
        }

        h1 {
            margin-top: 20px;
            color: #333;
        }

        .container {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
            margin: 20px;
        }

        .box {
            background-color: #fff;
            border-radius: 5px;
            padding: 20px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        ul {
            list-style-type: none;
            padding: 0;
            margin: 0;
        }

        li {
            margin-bottom: 5px;
        }
    </style>
</head>
<body>
    <h1>Estadísticas de Números Aleatorios</h1>

    <div class="container">
        <div class="box">
            <h2>Arreglo Aleatorio:</h2>
            <ul>
                @foreach (var numero in Model.Numeros)
                {
                    <li>@numero</li>
                }
            </ul>
        </div>

        <div class="box">
            <h2>Suma:</h2>
            <p>@Model.Suma</p>
        </div>

        <div class="box">
            <h2>Promedio:</h2>
            <p>@Model.Media</p>
        </div>

        <div class="box">
            <h2>Arreglo Ordenado:</h2>
            <ul>
                @foreach (var numero in Model.NumerosOrdenados)
                {
                    <li>@numero</li>
                }
            </ul>
        </div>

        <div class="box">
            <h2>Moda:</h2>
            <ul>
                @foreach (var numero in Model.Moda)
                {
                    <li>@numero</li>
                }
            </ul>
        </div>

        <div class="box">
            <h2>Mediana:</h2>
            <p>@Model.Mediana</p>
        </div>
    </div>
</body>
</html>