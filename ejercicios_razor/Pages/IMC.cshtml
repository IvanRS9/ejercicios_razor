@page
@model ejercicios_razor.Pages.IMCModel
@{
    ViewData["Title"] = "Calculadora de IMC";
}

<h1>Calculadora de IMC</h1>

<form method="post">
    <div>
        <label for="Peso">Peso (kg):</label>
        <input asp-for="Peso" type="number" />
    </div>
    <div>
        <label for="Altura">Altura (m):</label>
        <input asp-for="Altura" type="text" />
    </div>
    <div>
        <input type="submit" value="Calcular IMC" />
    </div>
</form>

@if (Model.IMC > 0)
{
    <h2>Resultado:</h2>
    <p>Tu IMC es: @Model.IMC</p>
    <p>Clasificación de peso: @Model.Clasificacion</p>

    @if (Model.Clasificacion == "Peso Bajo")
	{
		<p>Ligero como una pluma pai.</p>
		<img src="~/img/pluma.jpg" style="max-width: 200px;" />
	} else if (Model.Clasificacion == "Peso Normal")
	{
		<p>A ver, date vuelta.</p>
		<img src="~/img/normal.jpg" style="max-width: 200px;" />
	} else if (Model.Clasificacion == "Sobrepeso")
	{
		<p>Otro poquito y nos dejas sin comida pai.</p>
		<img src="~/img/sobre_peso.jpg" style="max-width: 200px;" />
    }
    else if (Model.Clasificacion == "Obesidad grado 1")
	{
		<p>¿Sabes si hay ofertas en el GYM?</p>
		<img src="~/img/obesidad_1.png" style="max-width: 200px;" />
	} else if (Model.Clasificacion == "Obesidad grado 2")
	{
		<p>¿Hace cuantos kilos no te veo?</p>
		<img src="~/img/obesidad_2.jpg" style="max-width: 200px;" />
	} else if (Model.Clasificacion == "Obesidad grado 3")
	{
		<p>El guerrero dragon esta entre nosotros</p>
		<img src="~/img/obesidad_3.jpg" style="max-width: 200px;" />
	}
}