@page
@model ejercicios_razor.Pages.IMCModel
@{
    ViewData["Title"] = "Calculadora de IMC";
}

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    h1, h2 {
        text-align: center;
        margin-top: 20px;
        color: #fff;
    }

    form {
        width: 300px;
        margin: 0 auto;
        background-color: #31363f;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    label {
        display: block;
        margin-bottom: 5px;
        color: #fff;
    }

    input[type="number"],
    input[type="text"] {
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        border: 1px solid #fff;
        border-radius: 3px;
        box-sizing: border-box;
    }

    p {
        text-align: center;
        margin-top: 20px;
        color: #fff;
    }

    img {
        display: block;
        margin: 0 auto;
        margin-top: 20px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        max-width: 200px;
        transition: transform 0.3s ease-in-out;
    }

        img:hover {
            transform: scale(1.1);
        }

	button {
		padding: 8px;
		border: 1px solid #75abae;
		border-radius: 4px;
		margin-bottom: 10px;
		width: 100%;
		box-sizing: border-box;
	}
</style>

<h1>Calculadora de IMC</h1>
<br />
<br />

<form method="post">
    <div>
        <label for="Peso">Peso (kg):</label>
        <input asp-for="Peso" type="number" value="" placeholder="80..."/>
    </div>
    <div>
        <label for="Altura">Altura (m):</label>
        <input asp-for="Altura" type="text" placeholder="1.80"/>
    </div>
    <br/>
    <div>
        <button type="submit" style="background: #75abae; color: #fff;font-size: 19px;">
            Calcular IMC
        </button>
    </div>
</form>

@if (Model.IMC > 0)
{
    <h2>Resultado:</h2>
    <p>Tu IMC es: @Model.IMC</p>
    <p>Clasificación de peso: @Model.Clasificacion</p>

    @if (Model.Clasificacion == "Peso Bajo")
    {
        <p>Ligero como una pluma pai.</p>
        <img src="~/img/pluma.jpg" />
    }
    else if (Model.Clasificacion == "Peso Normal")
    {
        <p>A ver, date vuelta.</p>
        <img src="~/img/normal.jpg" />
    }
    else if (Model.Clasificacion == "Sobrepeso")
    {
        <p>Otro poquito y nos dejas sin comida pai.</p>
        <img src="~/img/sobre_peso.jpg" />
    }
    else if (Model.Clasificacion == "Obesidad grado 1")
    {
        <p>¿Sabes si hay ofertas en el GYM?</p>
        <img src="~/img/obesidad_1.png" />
    }
    else if (Model.Clasificacion == "Obesidad grado 2")
    {
        <p>¿Hace cuantos kilos no te veo?</p>
        <img src="~/img/obesidad_2.jpg" />
    }
    else if (Model.Clasificacion == "Obesidad grado 3")
    {
        <p>El guerrero dragon esta entre nosotros</p>
        <img src="~/img/obesidad_3.jpg" />
    }
}
